<div class="jumbotron">
 <h1 class="display-4"> Your bookings:</h1>
  <% @bookings.each do |booking| %>
    <div class="card mb-3" style="max-width: 750px;">
      <div class="row no-gutters">
        <div class="col-mb-4">
          <% if booking.toilet.photo.attached? %>
           <%= cl_image_tag booking.toilet.photo.key, width: 180, height: 200, crop: :fill %>
          <% end %>
         </div>
         <div class="col-mb-3">
          <div class="card-body">
            <h3 class="card-title">Toilet NÂ°   <%= booking.toilet_id %></h3>
            <h6 class="card-subtitlte"> <strong> Arrival time: </strong>     <%= booking.arrivaltime %></h6>
            <h6 class="card-text"> <strong> What is it for? </strong>   <%= booking.pooptype%></h6>
            <h6 class="card-text"> <strong> Created at: </strong>   <%= booking.created_at %></h6>
          </div>
           </div>
          <div class="col-mb-3">
            <div class="card-body">
            <p><%= link_to 'Edit the booking', new_toilet_booking_path(booking), :class => "btn btn-primary" %></p>
            <p><%= link_to 'Delete the booking', booking, :class => "btn btn-primary", method: :delete, data: { confirm: 'Are you sure you want to cancel your booking?' } %></p>
            </div>
             </div>
      </div>
    </div>
  <% end %>
</div>

