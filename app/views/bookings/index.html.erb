<div class="jumbotron">
<% n = 0  %>
<% @bookings.each do |i| n = n + 1 end %>
 <h1 class="display-4"> Congrats you have had <%= n %> bookings!</h1>
  <% @bookings.each do |booking| %>
    <div class="card mb-3" style="max-width: 700px;">
      <div class="row mx-2 my-2">
         <div class="col-8">
            <h5 class="card-title">Toilet NÂ°   <%= booking.toilet_id %></h5>
            <p class="card-text">Arrival time:    <%= booking.arrivaltime %></p>
            <p class="card-text">What is it for?  <%= booking.pooptype%></p>
            <p class="card-text">Created at:   <%= booking.created_at %></p>
          </div>
          <div class="col-4">
            <p><%= link_to 'Edit the booking', new_toilet_booking_path(booking), :class => "btn btn-secondary" %></p>
