<div class="jumbotron">
  <div class="container ">
    <h1 class="display-4"><%= @toilet.id %></h1>
    <div class="container border">
      <div class="row">
        <div class="col-4 p-4">
        <p>Style: <%= toilet.style %></p>
        <p>Address: <%= toilet.address %></p>
        <p>Description: <%= toilet.description %></p>
        </div>
        <div class="col-4 p-4">
        <%= link_to 'Make a booking', new_toilet_booking_path(@toilet) %>
        </div>
        <div class="col-1 p-4">
        <%= link_to 'Edit', edit_toilet_path(@toilet), :class => "btn btn-primary"   %>
        </div>
      </div>
      </div>
  <hr class="my-4">

<h4 class="display-4 "><%= @toilet.id %> reviews</h4>
    <div class="container">
      <% @toilet.bookings.each do |review| %>
        <div class="container border my-2">
            <div class="row">
              <div class="col-4 p-4">
              <%= booking.review %>
              </div>
              <div class="col-2 p-4">
              <%= booking.rating %>
              </div>
              <div class="col-2 p-4">
            #   <%= link_to "Remove",
            #   review_path(booking),
            #   method: :delete,
            #   data: { confirm: "Are you sure?" } %>
            #   </div>
            </div>

            
        </div>
      <% end %>
    </div>
    <div class="container">
        
</div>
<hr class="my-4">
    <%= link_to 'See all toilets', toilets_path %> |
    </div>
</div>
