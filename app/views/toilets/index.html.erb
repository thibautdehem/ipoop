<h1 class="display-4 ">Where to poop nearby</h1>
<div class="jumbotron">
<div class="container">
      <div class="container">
        <div class="row">
          <div class="col-8">
          <% @toilets.each do |toilet| %>
            <div class="container">
                  <div class="card-group">
                      <div class="card px-2 py-2" style="width: 18rem;">
                        <img class="card-img-top"><%= cl_image_tag(toilet.photo.key, width: 250, height: 200, crop: :fill) %></img>
                        <div class="card-body">
                          <h5 class="card-title">Toilet NÂ° <%= toilet.id %></h5>
                          <p class="card-text">
                            <p>Style: <%= toilet.style %></p>
                            <p>Address: <%= toilet.address %></p>
                            <p>Description: <%= toilet.description %></p>
                            <div class="btn btn-primary">
                            <%= link_to 'Look that toilet', toilet_path(toilet), :class => "btn btn-primary" %>
                            </div>
                          </div>
                    </div>
                  </div>
              </div>
            <% end %>
          </div>
          <div class="col-4">
                <h2 class="my-3 text-center">Look for the closest toilet on the map!</h2>
                <div class="d-flex justify-content-center">
                  <form class="form-inline" id="search-form">
                    <input type="text" class="form-control" placeholder="Type adress" id="search-input">
                    <input type="submit" class="btn btn-primary btn-sm mx-2">
                  </form>
                </div>
              <div class="d-flex justify-content-center">
            <div id="map"
              style="width: 100%; height: 600px;"
              data-markers="<%= @markers.to_json %>"
              data-mapbox-api-key="<%= ENV['MAPBOX_TOKEN'] %>"></div>
            </div>
          </div>
        </div>
      </div>
    <hr class="my-4">
  </div>
</div>

<% if policy(Toilet).create? %>
  <%= link_to "New Toilet", new_toilet_path %>
<% end %>
